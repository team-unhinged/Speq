<Window x:Class="Speq.Source.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Speq"
        mc:Ignorable="d"
        Icon="/Resources/Images/Logo/SmallLogo.png"
        Title="Speq" 
        MinHeight="480" MinWidth="640"
        Height="480" Width="640">
    <Border Background="{StaticResource BackgroundPrimaryBrush}">
        <Grid>
            <!-- Have the Dashboard Tab selected by default (SelectedIndex = 0) -->
            <TabControl ItemsSource="{Binding SpeqTabs}"
                        SelectedIndex="0"/>
        </Grid>
    </Border>
</Window>
